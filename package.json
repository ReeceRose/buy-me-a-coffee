{
  "name": "buy-me-a-coffee",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm run -r build",
    "build:docker": "pnpm run -r build:docker",
    "start:docker": "pnpm run -r start:docker",
    "stop:docker": "pnpm run -r stop:docker",
    "push:docker": "./scripts/push.sh",
    "dev": "pnpm run -r dev",
    "lint": "pnpm run -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "pnpm run -r type-check",
    "test": "pnpm run -r test",
    "test:watch": "pnpm run -r test:watch",
    "test:write": "pnpm run -r test:write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  }
}
